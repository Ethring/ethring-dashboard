{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/composition/*": [
                "src/composition/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/assets/*": [
                "src/assets/*"
            ],
            "@/core/*": [
                "src/core/*"
            ],
            "@/*": [
                "src/*"
            ],
        },
        "allowJs": true,
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
}